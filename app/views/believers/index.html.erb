<h1>Believers</h1>

<table>
  <thead>
    <tr>
      <th>Temple</th>
      <th>Name</th>
      <th>Addressprovince</th>
      <th>Addressdetail</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Registerday</th>
      <th>Remarks</th>
      <th>Ganzhi</th>
      <th>Dharmaname</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @believers.each do |believer| %>
      <tr>
        <td><%= believer.temple_id %></td>
        <td><%= believer.name %></td>
        <td><%= believer.addressProvince %></td>
        <td><%= believer.addressDetail %></td>
        <td><%= believer.phone %></td>
        <td><%= believer.gender %></td>
        <td><%= believer.birthday %></td>
        <td><%= believer.registerday %></td>
        <td><%= believer.remarks %></td>
        <td><%= believer.ganzhi %></td>
        <td><%= believer.dharmaName %></td>
        <td><%= believer.email %></td>
        <td><%= link_to 'Show', believer %></td>
        <td><%= link_to 'Edit', edit_believer_path(believer) %></td>
        <td><%= link_to 'Destroy', believer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

