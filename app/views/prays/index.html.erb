<p id="notice"><%= notice %></p>

<h1>Prays</h1>

<table>
  <thead>
    <tr>
      <th>Temple</th>
      <th>Buddha</th>
      <th>Believer</th>
      <th>Donator</th>
      <th>Prayerrelation</th>
      <th>Prayername</th>
      <th>Prayerbirthyear</th>
      <th>Prayeraddress</th>
      <th>Prayerphone</th>
      <th>Startday</th>
      <th>Finishday</th>
      <th>Fullpayday</th>
      <th>Isprayfinished</th>
      <th>Isfinishconfirmed</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prays.each do |pray| %>
      <tr>
        <td><%= pray.temple_id %></td>
        <td><%= pray.buddha_id %></td>
        <td><%= pray.believer_id %></td>
        <td><%= pray.donator %></td>
        <td><%= pray.prayerRelation %></td>
        <td><%= pray.prayerName %></td>
        <td><%= pray.prayerBirthyear %></td>
        <td><%= pray.prayerAddress %></td>
        <td><%= pray.prayerPhone %></td>
        <td><%= pray.startDay %></td>
        <td><%= pray.finishDay %></td>
        <td><%= pray.fullPayDay %></td>
        <td><%= pray.isPrayFinished %></td>
        <td><%= pray.isFinishConfirmed %></td>
        <td><%= pray.remarks %></td>
        <td><%= link_to 'Show', pray %></td>
        <td><%= link_to 'Edit', edit_pray_path(pray) %></td>
        <td><%= link_to 'Destroy', pray, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

