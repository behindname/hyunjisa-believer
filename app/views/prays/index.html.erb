<div class="container my-3">
  <div class="row">
    <div class="col-12">
      <h1>기도 목록</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">분원</th>
            <th scope="col">부처님</th>
            <th scope="col">신청자(신도)</th>
            <th scope="col">입재자</th>
            <th scope="col">생년(간지)</th>
            <th scope="col">입재일</th>
            <th scope="col">회향일</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @prays.each do |pray| %>
            <tr>
              <td><%= pray.temple&.place %></td>
              <td><%= pray.buddha&.name %></td>
              <td><%= pray.believer&.name %></td>
              <td><%= pray.prayerName %></td>
              <td><%= pray.prayerBirthyear %></td>
              <td><%= pray.startDay %></td>
              <td><%= pray.finishDay %></td>
              <td><%= link_to 'Show', pray %></td>
              <td><%= link_to 'Edit', edit_pray_path(pray) %></td>            
            </tr>
          <% end %>
        </tbody>
      </table>
      <% paginate @prays %>
    </div>
  </div>
  <div class="row justify-content-end">
    <div class="col-4 text-right">
      <%= link_to 'New Pray', new_pray_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
