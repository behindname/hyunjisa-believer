<%= form_with(model: pray, local: true, class: "my-3") do |form| %>
  <% if pray.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pray.errors.count, "error") %> prohibited this pray from being saved:</h2>

      <ul>
        <% pray.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h5 class="mt-3">기도비 입금 내역</h5><hr>
  <div id="pray_donations">
    <%= form.fields_for :pray_donations do |donation| %>
      <%= render "prays/pray_donation_fields", f: donation %>
    <% end %>
    <div class="links mb-3">
      <i class="fa fa-plus-circle">
        <%= link_to_add_association '기도비 추가', form, :pray_donations %>
      </i>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>
