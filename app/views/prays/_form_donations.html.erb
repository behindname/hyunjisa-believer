<%= form_with(model: pray, local: true, class: "my-3") do |form| %>
  <% if pray.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pray.errors.count, "error") %> prohibited this pray from being saved:</h2>

      <ul>
        <% pray.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h5 class="mt-3">기도비 입금 내역</h5><hr>
  <%= form.fields_for :pray_donations do |d| %>
    <div class="row mb-3">
      <div class="col-3">
        <%= d.label :donation if d.index == 0 %>
        <%= d.number_field :donation, class: "form-control" %>
      </div>
      <div class="col-3">
        <%= d.label :donateDay if d.index == 0 %>
        <%= d.date_field :donateDay, class: "form-control" %>
      </div>
      <div class="col-6">
        <%= d.label :remarks if d.index == 0 %>
        <%= d.text_area :remarks, class: "form-control" %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit class: "btn btn-primary btn-block" %>
  </div>
<% end %>
