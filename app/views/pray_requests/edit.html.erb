<div class="container my-3">
  <div class="row">
    <div class="col">
      <h3 class="card-title"><%= @pray.prayerName %>님의 기도</h3>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <%= render 'form', pray_request: @pray_request %>          
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3 justify-content-end">
    <div class="col-4 text-right">
      <%= link_to '보기', @pray_request, class: "btn btn-primary" %> |
      <%= link_to '목록으로', pray_pray_requests_path(@pray), class: "btn btn-secondary" %>
    </div>
  </div>
</div>